<style>
  /*============= page loader css start ========*/
  .yv-page-loader {
    position: fixed;
    width: 100%;
    height: 100%;
    background-color: rgba(255, 255, 255, 1);
    left: 0;
    top: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 99;
    opacity: 0;
    transform: translateY(-100%);
  }

  .page-loading .yv-page-loader {
    opacity: 1;
    transform: translateY(0);
  }

  .yv-page-loader img {
    max-width: 100px;
  }

  /*============= page loader css end ========*/
