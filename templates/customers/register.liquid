{{ 'customer.css' | asset_url | stylesheet_tag }}
<section class="account-pages-section">
  <div class="container">
    <div class="yv-customer-pages register"> 
      <div class="row">
        <div class="col-12 col-sm-12 col-md-7 col-lg-6">
          <div class="left-side-content">
            <div class="yv-login-form yv-register-form" id="registerForm">
              <h3 class="form-title" tabindex="-1">
                {{ 'customer.register.title' | t }}
              </h3> 
              <p>{{ 'customer.register.subtext' | t }}</p>
              {%- form 'create_customer', novalidate: 'novalidate' -%}
              {%- if form.errors -%}
              <div class="error-container">
                <p class="form__message" tabindex="-1">
                  
                      <svg aria-hidden="true" focusable="false" role="presentation" viewBox="0 0 13 13">
                        <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
                        <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
                        <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
                        <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7"/></svg>
                  {{ 'templates.contact.form.error_heading' | t }}
                </p>
                <ul class="list-unstyled"> 
                  {%- for field in form.errors -%}
                  <li>
                    {%- if field == 'form' -%}
                    {{ form.errors.messages[field] }}
                    {%- else -%}
                    <a href="#signUpForm-{{ field }}">
                    {{ form.errors.translated_fields[field] | capitalize }}
                    {{ form.errors.messages[field] }}
                    </a>
                    {%- endif -%}
                  </li>
                  {%- endfor -%}
                </ul>
              </div>
              {%- endif -%}
              <div class="field form-group">   
                <label for="signUpForm-FirstName">
                  {{ 'customer.register.first_name' | t }}
                </label>   
                <input
                       type="text"
                       class="form-control"
                       name="customer[first_name]"
                       id="signUpForm-FirstName"
                       {% if form.first_name %}value="{{ form.first_name }}"{% endif %}
                       autocomplete="given-name"
                       placeholder="{{ 'customer.register.first_name' | t }}"
                       >
              </div>
              <div class="field form-group">
                <label for="signUpForm-LastName">
                  {{ 'customer.register.last_name' | t }}
                </label>
                <input
                       type="text"
                       class="form-control"
                       name="customer[last_name]"
                       id="signUpForm-LastName"
                       {% if form.last_name %}value="{{ form.last_name }}"{% endif %}
                       autocomplete="family-name"
                       placeholder="{{ 'customer.register.last_name' | t }}"
                       >
              </div>
              <div class="field form-group">  
                <label for="signUpForm-email">
                  {{ 'customer.register.email' | t }}
                </label>    
                <input
                       type="email"
                       class="form-control"
                       name="customer[email]"
                       id="signUpForm-email"
                       {% if form.email %} value="{{ form.email }}"{% endif %}
                       spellcheck="false"
                       autocapitalize="off"
                       autocomplete="email"
                       aria-required="true"
                       {% if form.errors contains 'email' %}
                       aria-invalid="true"
                       aria-describedby="signUpForm-email-error"
                       {% endif %}
                       placeholder="{{ 'customer.register.email' | t }}"
                       >
              </div>
              <div class="field form-group"> 
                <label for="signUpForm-password">
                  {{ 'customer.register.password' | t }}
                </label>    
                <input
                       type="password"
                       class="form-control"
                       name="customer[password]"
                       id="signUpForm-password"
                       aria-required="true"
                       {% if form.errors contains 'password' %}
                       aria-invalid="true"
                       aria-describedby="signUpForm-password-error"
                       {% endif %}
                       placeholder="{{ 'customer.register.password' | t }}"
                       >
              </div>
              <button class="button black-btn btn-block">
                {{ 'customer.register.submit' | t }}
              </button>
              <div class="text-center login-bottom-box d-block d-md-none">
                  <p><a href="{{ routes.account_login_url }}" class="">  {{ 'customer.register.login_button' | t }}</a></p>
                </div>
              {%- endform -%}
            </div>
          </div>
        </div>
        <div class="col-12 col-sm-12 col-md-5 col-lg-6">
          <div class="right-side-content">
            <div class="customer-page-content">
              <h3 class="customer-page-title">{{ 'customer.register.login_heading' | t }}</h3>
              <p class="customer-page-desc">{{ 'customer.register.login_subtext' | t }}</p>
              <a href="{{ routes.account_login_url }}" class="button black-btn btn-block">
                {{ 'customer.register.login_button' | t }}
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>