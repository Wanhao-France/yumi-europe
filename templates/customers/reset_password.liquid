{{ 'customer.css' | asset_url | stylesheet_tag }}
<section class="account-pages-section">
  <div class="container">
    <div class="yv-customer-pages reset-password">
      <div class="row">
        <div class="col-12 col-sm-12 col-md-7 col-lg-6">
          <div class="left-side-content">
            <div class="yv-login-form yv-reset-password-form" id="reset-password-form">
              <h3 class="form-title">
                {{ 'customer.reset_password.title' | t }}
              </h3>
              <p>
                {{ 'customer.reset_password.subtext' | t: email: email }}
              </p>
              {%- form 'reset_customer_password' -%}
              {%- if form.errors -%}
              <div class="error-container">
                <p class="form__message" tabindex="-1">
                  <svg aria-hidden="true" focusable="false" role="presentation" viewBox="0 0 13 13">
                    <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"></circle>
                    <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"></circle>
                    <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"></path>
                    <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
                    </path></svg>
                  {{ 'templates.contact.form.error_heading' | t }}
                </p>
                <ul class="list-unstyled">
                  {%- for field in form.errors -%}
                  <li>
                    {%- if field == 'form' -%}
                    {{ form.errors.messages[field] }}
                    {%- else -%}
                    <a href="#{{ field }}">
                      {{ form.errors.translated_fields[field] | capitalize }}
                      {{ form.errors.messages[field] }}
                    </a>
                    {%- endif -%}
                  </li>
                  {%- endfor -%}
                </ul>
              </div>
              {%- endif -%}
              <div class="field form-group">
                <label for="password">
                  {{ 'customer.reset_password.password' | t }}
                </label>    
                <input
                       type="password"
                       name="customer[password]"
                       id="password"
                       class="form-control"
                       autocomplete="new-password"
                       {% if form.errors contains 'password' %}
                       aria-invalid="true"
                       aria-describedby="password-error"
                       {% endif %}
                       placeholder="{{ 'customer.reset_password.password' | t }}" class="form-control"
                       >
              </div>
              <div class="field form-group">
                <label for="password_confirmation">
                  {{ 'customer.reset_password.password_confirm' | t }}
                </label>     
                <input
                       type="password"
                       name="customer[password_confirmation]"
                       id="password_confirmation"
                       class="form-control"
                       autocomplete="new-password"
                       {% if form.errors contains 'password_confirmation' %}
                       aria-invalid="true"
                       aria-describedby="password_confirmation-error"
                       {% endif %}
                       placeholder="{{ 'customer.reset_password.password_confirm' | t }}" class="form-control"
                       >

              </div>
              <button class="button black-btn btn-block">
                {{ 'customer.reset_password.submit' | t }}
              </button>
              <div class="text-center login-bottom-box ">
                  <p><a class="" href="{{ routes.account_login_url }}">{{ 'customer.register.login_button' | t }}</a></p>
                </div>
              {%- endform -%}
            </div>
          </div>
        </div>
        <div class="col-12 col-sm-12 col-md-5 col-lg-6">
          <div class="right-side-content">
            <div class="customer-page-content">             
              <h3 class="customer-page-title">{{ 'customer.login_page.new_account_heading' | t }}</h3>
              <p class="customer-page-desc">{{ 'customer.login_page.new_account_subtext' | t }}</p>
              <a href="{{ routes.account_login_url }}" class="button black-btn btn-block">
                {{ 'customer.register.login_button' | t }}
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
