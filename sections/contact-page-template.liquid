  </div>
</div>
{% schema %}
{
  "name": "t:sections.contact-page-template.name",
  "templates": [
    "page"
  ],
  "tag": "section",
  "class": "contact-section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.contact-page-template.settings.header1.content"
    },
    {
      "type": "text",
      "id": "contact_heading",
      "default": "Customer Service",
      "label": "t:sections.contact-page-template.settings.contact_heading.label"
    },
    {
      "type": "text",
      "id": "phone_heading",
      "default": "PHONE US",
      "label": "t:sections.contact-page-template.settings.phone_heading.label"
    },
    {
      "type": "text",
      "id": "phone_number",
      "default": "+1234567890",
      "label": "t:sections.contact-page-template.settings.phone_number.label"
    },
    {
      "type": "text",
      "id": "email_heading",
      "default": "EMAIL",
      "label": "t:sections.contact-page-template.settings.email_heading.label"
    },
    {
      "type": "text",
      "id": "email",
      "default": "info@email.com",
      "label": "t:sections.contact-page-template.settings.email.label"
    },
    {
      "type": "text",
      "id": "address_heading",
      "default": "ADDRESS",
      "label": "t:sections.contact-page-template.settings.address_heading.label"
    },
    {
      "type": "text",
      "id": "address",
      "default": "#123 abc main city",
      "label": "t:sections.contact-page-template.settings.address.label"
    },
    {
      "type": "header",
      "content": "t:sections.contact-page-template.settings.header2.content"
    },
    {
      "type": "text",
      "id": "form_heading",
      "default": "Get In Touch",
      "label": "t:sections.contact-page-template.settings.form_heading.label"
    },
    {
      "type": "text",
      "id": "form_button",
      "default": "SEND MESSAGE",
      "label": "t:sections.contact-page-template.settings.form_button.label"
    }
  ]
}
{% endschema %}