              <div class="yv-contact-text">
                {% if section.settings.email_heading != blank %}
                <span>{{ section.settings.email_heading }}</span>
                {% endif %}
                {% if section.settings.email != blank %}
                <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a>
                {% endif %}
              </div>
            </div>
            {%- endif -%}
            {%- if section.settings.address_heading != blank and section.settings.address != blank -%}
